<Window x:Class="PL.Simulator.SimulatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Simulator"
        mc:Ignorable="d"
        Title="SimulatorWindow" Height="450" Width="800"
        DataContext = "{Binding RelativeSource={RelativeSource Self}}" >
    <Grid>
        <Button Margin="585,344,43,25" BorderBrush="White" BorderThickness="5" TextBlock.Foreground="DeepPink" Background="Black" >Finish imaging</Button>
        <Label Content="ID ORDER:" HorizontalAlignment="Left" Margin="62,47,0,0" VerticalAlignment="Top" Width="72"/>
        <TextBlock HorizontalAlignment="Left" Margin="156,47,0,0" TextWrapping="Wrap" Text="{Binding IDOrder}" VerticalAlignment="Top" Height="26" Width="97"/>


    </Grid>
</Window>
